<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg">

    <include
        android:id="@+id/include"
        layout="@layout/head"/>
    <View
        android:id="@+id/xian"
        android:layout_below="@+id/include"
        style="@style/xian"
        />

    <View
        android:id="@+id/xian2"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/xian"
        style="@style/xian"
        />

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_below="@+id/xian2"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/tv_surplus"
            android:layout_marginTop="20dp"
            android:textSize="@dimen/text_size24"
            android:textColor="@color/eight_e_color"
            android:text="@string/yehb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/ll"
            android:layout_marginTop="20dp"
            android:layout_below="@id/tv_surplus"
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <RelativeLayout
                android:id="@+id/rl_hundred_points"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/rect_blue2"
                android:layout_marginRight="17dp">
                <TextView
                    android:id="@+id/tv_hundred_points"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hyb"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/text_size30"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_kilo_points"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/rect_gray8">
                <TextView
                    android:id="@+id/tv_kilo_points"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tyb"
                    android:textColor="@color/text_hot_color"
                    android:textSize="@dimen/text_size30"
                    />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll2"
            android:layout_marginTop="20dp"
            android:layout_below="@id/ll"
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <RelativeLayout
                android:id="@+id/rl_myriad_points"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/rect_gray8"
                android:layout_marginRight="17dp">
                <TextView
                    android:id="@+id/tv_myriad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/wyb"
                    android:textColor="@color/text_hot_color"
                    android:textSize="@dimen/text_size30"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_other_points"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/rect_gray8">
                <EditText
                    android:id="@+id/et_other_points"
                    android:inputType="number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/qtse"
                    android:cursorVisible="false"
                    android:paddingLeft="3dp"
                    android:background="@null"
                    android:gravity="right"
                    android:textColorHint="@color/blue"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/text_size30"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:id="@+id/xian3"
        style="@style/xian"
        android:layout_below="@+id/rl1"/>

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_below="@+id/xian3"
        android:background="@drawable/shadow"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">
        <TextView
            android:textSize="@dimen/text_size30"
            android:textColor="@color/text_hot_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/xj"
            />
        <TextView
            android:id="@+id/tv_pay_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10å…ƒ"
            android:textColor="@color/detail_red"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/text_size30"/>

    </RelativeLayout>

    <View
        android:id="@+id/xian4"
        style="@style/xian"
        android:layout_below="@+id/rl"
        />

    <View
        android:id="@+id/xian5"
        android:layout_marginTop="8dp"
        style="@style/xian"
        android:layout_below="@+id/xian4"
        />
    <View
        android:id="@+id/xian6"
        android:layout_below="@id/xian5"
        style="@style/xian"/>
    <LinearLayout
        android:id="@+id/ll_protocol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/xian6"
        android:layout_marginLeft="@dimen/margin_left24"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/silver_choose"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginRight="3dp"
            android:background="@mipmap/icon_duigouh"
            android:paddingLeft="3dp"
            android:scaleType="fitCenter" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/ydty"
            android:textColor="@color/text_one_color"
            android:textSize="@dimen/text_size24" />

        <TextView
            android:id="@+id/silver_protocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/xy"
            android:textColor="@color/blue"
            android:textSize="@dimen/text_size24" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_sure_bug"
        style="@style/mySureButton"
        android:text="@string/qrgm"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>