<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="152dp"
    android:elevation="3dp">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/rect_gray"
        android:elevation="2dp"
        app:cardElevation="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_product_title"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginRight="80dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/margin_left24"
                android:text="@string/app_name"
                android:textColor="@color/text_hot_color"
                android:textSize="@dimen/text_size30"
                android:textStyle="bold"/>

            <View style="@style/xian"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.jdyy.cfunding.view.RoundImageView
                    android:id="@+id/iv_product_picture"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_left16"
                    android:scaleType="fitXY"
                    android:src="@mipmap/timg"
                    app:ml_radius="5dp"
                    app:ml_border_width="1dp"
                    app:ml_border_color="#f0f0f4"
                    />

                <TextView
                    android:id="@+id/tv_product_name"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:layout_alignTop="@+id/iv_product_picture"
                    android:layout_marginLeft="@dimen/margin_left16"
                    android:layout_marginRight="20dp"
                    android:layout_toRightOf="@+id/iv_product_picture"
                    android:ellipsize="end"
                    android:lineSpacingExtra="3dp"
                    android:maxLines="2"
                    android:text="全国领先沙画艺术企业，少儿成人培训基地，沙瓶画开创者"
                    android:textColor="@color/text_one_color"
                    android:textSize="@dimen/text_size26"/>

                <TextView
                    android:id="@+id/tv_product_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_product_name"
                    android:layout_marginLeft="@dimen/margin_left16"
                    android:layout_marginTop="11dp"
                    android:layout_toRightOf="@+id/iv_product_picture"
                    android:text="10%~12%"
                    android:textColor="@color/hot_red"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tv_product_percent"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@id/tv_product_percent"
                    android:text="@string/hbl"
                    android:textColor="@color/b_nine_color"
                    android:textSize="@dimen/text_size24"/>

                <TextView
                    android:id="@+id/tv_product_progress_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tv_product_percent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:text="56.23%"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/text_size24"/>

                <ProgressBar
                    android:id="@+id/pb_product_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_below="@+id/tv_product_progress_percent"
                    android:layout_marginLeft="@dimen/margin_left16"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/iv_product_picture"
                    android:max="100"
                    android:progress="56"
                    android:progressDrawable="@drawable/progress_bg"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pb_product_progress"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@id/iv_product_picture"
                    android:gravity="bottom"
                    android:orientation="horizontal">
                    <RelativeLayout
                        style="@style/commonWeightLayout"
                        android:gravity="left">
                        <ImageView
                            android:id="@+id/tv"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@mipmap/sy_r"/>
                        <TextView
                            android:id="@+id/tv_product_person"
                            style="@style/myHotBottomTextView"
                            android:layout_toRightOf="@+id/tv"
                            android:text="2655人"/>
                    </RelativeLayout>
                    <RelativeLayout
                        style="@style/commonWeightLayout"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/tv2"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@mipmap/sy_jb"/>
                        <TextView
                            android:id="@+id/tv_product_money"
                            style="@style/myHotBottomTextView"
                            android:layout_toRightOf="@id/tv2"
                            android:text="100万元"/>
                    </RelativeLayout>

                    <RelativeLayout
                        style="@style/commonWeightLayout"
                        android:gravity="right">
                        <ImageView
                            android:id="@+id/tv3"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@mipmap/sy_sj"/>
                        <TextView
                            android:id="@+id/tv_product_time"
                            style="@style/myHotBottomTextView"
                            android:layout_marginRight="10dp"
                            android:layout_toRightOf="@+id/tv3"
                            android:text="23天"/>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <ImageView
        android:id="@+id/iv_collect_flag"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_toLeftOf="@+id/iv_product_flag"
        android:layout_marginTop="3dp"/>
    <ImageView
        android:id="@+id/iv_product_flag"
        android:layout_width="40dp"
        android:layout_height="22dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/margin_left16"
        android:elevation="6dp"/>
</RelativeLayout>