<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg">

    <include
        android:id="@+id/include"
        layout="@layout/head"/>

    <View style="@style/xian"/>

    <View style="@style/xian"
          android:layout_marginTop="8dp"/>
    
    <RelativeLayout
        android:background="@drawable/shadow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_left24"
        android:paddingRight="@dimen/margin_right24">
        
        <TextView
            android:id="@+id/tv"
            android:layout_marginTop="15dp"
            android:text="@string/ddbh"
            style="@style/mylefttextview"/>

        <TextView
            android:id="@+id/tv_interflow_number"
            android:layout_marginTop="15dp"
            style="@style/myrighttextview"
            android:layout_toRightOf="@+id/tv"
            />
        <TextView
            android:id="@+id/tv1"
            android:layout_below="@+id/tv"
            android:layout_marginTop="12dp"
            android:text="@string/cjsjm"
            style="@style/mylefttextview"/>

        <TextView
            android:id="@+id/tv_interflow_time"
            android:layout_below="@+id/tv"
            android:layout_marginTop="12dp"
            android:text="66666"
            style="@style/myrighttextview"
            android:layout_toRightOf="@+id/tv"/>

        <TextView
            android:id="@+id/tv2"
            android:layout_below="@+id/tv1"
            android:layout_marginTop="12dp"
            android:text="@string/sdsj"
            style="@style/mylefttextview"/>

        <TextView
            android:id="@+id/tv_interflow_date"
            android:layout_below="@+id/tv1"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="15dp"
            android:text="66666"
            style="@style/myrighttextview"
            android:layout_toRightOf="@+id/tv"/>
    </RelativeLayout>

    <View
        android:layout_marginTop="8dp"
        style="@style/xian"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:paddingLeft="@dimen/margin_left24"
        android:paddingRight="@dimen/margin_right24"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv3"
            android:layout_marginTop="12dp"
            android:text="@string/sdsj"
            style="@style/mylefttextview"/>

        <TextView
            android:id="@+id/tv_order_number"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="15dp"
            style="@style/myrighttextview"
            android:layout_toRightOf="@+id/tv3"/>
    </RelativeLayout>
    <View style="@style/xian"/>
    <ListView
        android:id="@+id/list"
        android:background="@drawable/shadow"
        android:divider="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>