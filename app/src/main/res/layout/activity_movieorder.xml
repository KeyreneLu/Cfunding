<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">

    <include
        android:id="@+id/include"
        layout="@layout/head"/>

    <ScrollView
        android:layout_below="@+id/include"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@color/blue">

                <TextView
                    android:id="@+id/tv_movie_pay_state"
                    style="@style/twoWrapLayout"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:text="@string/dfk"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size28"/>

                <ImageView
                    android:id="@+id/iv_movie_pay_picture"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="40dp"
                    android:src="@mipmap/cp_wl"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:background="@color/white"
                android:paddingLeft="@dimen/margin_left24"
                android:paddingRight="@dimen/margin_right24">

                <ImageView
                    android:src="@mipmap/timg"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_lucre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shadow"
                android:paddingLeft="@dimen/margin_left24"
                android:paddingRight="@dimen/margin_right24">
                <TextView
                    android:id="@+id/tv3"
                    android:text="@string/xmmc"
                    style="@style/mylefttextview"
                    android:layout_marginTop="15dp"/>

                <TextView
                    android:id="@+id/tv_movie_lucre_number"
                    android:text="6666"
                    style="@style/myorderrighttextview"
                    android:layout_marginTop="15dp"/>

                <TextView
                    android:id="@+id/tv4"
                    android:text="@string/xszq"
                    style="@style/mylefttextview"
                    android:layout_below="@+id/tv3"
                    android:layout_marginTop="12dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv4"
                    android:text="@string/yuji"
                    android:textSize="@dimen/text_size26"
                    android:textColor="@color/radioTextColor"
                    android:layout_marginTop="15dp"/>

                <TextView
                    android:id="@+id/tv_movie_lucre_time"
                    style="@style/myorderrighttextview"
                    android:text="6666"
                    android:layout_below="@+id/tv3"
                    android:layout_marginTop="12dp"/>

                <TextView
                    android:id="@+id/tv5"
                    android:text="@string/wtxsyjsyl"
                    style="@style/mylefttextview"
                    android:layout_below="@+id/tv4"
                    android:layout_marginTop="12dp"/>

                <TextView
                    android:id="@+id/tv_movie_lucre_percent"
                    android:text="6666"
                    style="@style/myorderrighttextview"
                    android:layout_below="@+id/tv4"
                    android:layout_marginTop="12dp"/>

                <TextView
                    android:id="@+id/tv6"
                    android:text="@string/yjdqsy"
                    style="@style/mylefttextview"
                    android:layout_below="@+id/tv5"
                    android:layout_marginTop="12dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv6"
                    android:layout_below="@+id/tv5"
                    android:text="@string/yuan"
                    android:textSize="@dimen/text_size26"
                    android:textColor="@color/radioTextColor"
                    android:layout_marginTop="12dp"/>

                <TextView
                    android:id="@+id/tv_movie_lucre_money"
                    style="@style/myorderrighttextview"
                    android:text="6666"
                    android:layout_below="@+id/tv5"
                    android:layout_marginTop="12dp"/>
                <TextView
                    android:id="@+id/tv7"
                    android:text="@string/gmje"
                    style="@style/mylefttextview"
                    android:layout_below="@+id/tv6"
                    android:layout_marginTop="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv7"
                    android:layout_below="@+id/tv6"
                    android:text="@string/yuan"
                    android:textSize="@dimen/text_size26"
                    android:textColor="@color/radioTextColor"
                    android:layout_marginTop="12dp"/>

                <TextView
                    android:id="@+id/tv_movie_pay_sum"
                    style="@style/myorderrighttextview"
                    android:text="6666"
                    android:layout_below="@+id/tv6"
                    android:layout_marginTop="12dp"/>
                <TextView
                    android:id="@+id/tv10"
                    android:text="@string/djj"
                    style="@style/mylefttextview"
                    android:layout_below="@+id/tv7"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv10"
                    android:layout_below="@+id/tv7"
                    android:text="@string/yuan"
                    android:textSize="@dimen/text_size26"
                    android:textColor="@color/radioTextColor"
                    android:layout_marginTop="12dp"/>
                <TextView
                    android:id="@+id/tv_movie_pay_cash"
                    style="@style/myorderrighttextview"
                    android:text="6666"
                    android:layout_below="@+id/tv7"
                    android:layout_marginTop="12dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/rl_second_none"
                android:background="@drawable/shadow"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:paddingLeft="@dimen/margin_left24"
                android:paddingRight="@dimen/margin_right24">
                <TextView
                    android:text="@string/sfje"
                    style="@style/mylefttextview"
                    android:textColor="@color/text_hot_color"
                    android:textSize="@dimen/text_size30"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="15dp"/>

                <TextView
                    android:id="@+id/tv_all_pay_sum2"
                    style="@style/myorderrighttextview"
                    android:text="6666"
                    android:textSize="@dimen/text_size30"
                    android:textColor="@color/chengse"
                    android:layout_marginTop="12dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_first_none"
                android:layout_marginTop="8dp"
                android:background="@drawable/shadow"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:paddingLeft="@dimen/margin_left24"
                android:paddingRight="@dimen/margin_right24">
                <TextView
                    android:text="@string/sfje"
                    style="@style/mylefttextview"
                    android:textColor="@color/text_hot_color"
                    android:textSize="@dimen/text_size30"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="15dp"/>

                <TextView
                    android:id="@+id/tv_all_pay_sum"
                    style="@style/myorderrighttextview"
                    android:text="6666"
                    android:textSize="@dimen/text_size30"
                    android:textColor="@color/chengse"
                    android:layout_marginTop="12dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/shadow"
                android:paddingLeft="@dimen/margin_left24"
                android:paddingRight="@dimen/margin_right24"
                android:layout_marginBottom="30dp">
                <TextView
                    android:id="@+id/tv8"
                    android:text="@string/ddbh"
                    style="@style/mylefttextview"
                    android:layout_marginTop="15dp"/>

                <TextView
                    android:id="@+id/tv_pay_serial_number"
                    android:text="6666"
                    style="@style/myorderrighttextview"
                    android:layout_marginTop="15dp"/>

                <TextView
                    android:id="@+id/tv9"
                    android:text="@string/zffs"
                    style="@style/mylefttextview"
                    android:layout_below="@+id/tv8"
                    android:layout_marginTop="12dp"/>

                <TextView
                    style="@style/myorderrighttextview"
                    android:id="@+id/tv_movie_pay_way"
                    android:text="6666"
                    android:layout_below="@+id/tv8"
                    android:layout_marginTop="12dp"/>

                <TextView
                    android:text="@string/cjsjm"
                    style="@style/mylefttextview"
                    android:layout_below="@+id/tv9"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="15dp"/>

                <TextView
                    android:id="@+id/tv_movie_pay_date"
                    style="@style/myorderrighttextview"
                    android:text="6666"
                    android:layout_below="@+id/tv9"
                    android:layout_marginTop="12dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_content_none"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rect_gray2"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/margin_right24">
        <TextView
            android:id="@+id/tv_order_cancel"
            android:text="@string/qxdd"
            android:textColor="@color/text_one_color"
            android:textSize="@dimen/text_size26"
            android:background="@drawable/rect_gray5"
            android:gravity="center"
            android:layout_width="80dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/tv_order_pay"
            android:layout_height="30dp"/>
        <TextView
            android:id="@+id/tv_order_pay"
            android:text="@string/fk"
            android:textColor="@color/chengse"
            android:textSize="@dimen/text_size26"
            android:background="@drawable/rect_yellow1"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_width="80dp"
            android:layout_height="30dp"/>
    </RelativeLayout>
</RelativeLayout>