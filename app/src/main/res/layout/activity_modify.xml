<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg"
    >
    <include
        android:id="@+id/include"
        layout="@layout/head" />

    <View
        android:id="@+id/view1"
        style="@style/xian"
        android:layout_below="@+id/include" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view1"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/dl_img"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_left24"
                android:paddingLeft="3dp"
                android:text="@string/zh"
                android:textColor="@color/text_hot_color"
                android:textSize="@dimen/text_size30" />

            <EditText
                android:id="@+id/et_modify_account"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="90dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/qsrndsjh"
                android:textColor="@color/text_hot_color"
                android:textColorHint="@color/b_nine_color"
                android:textSize="@dimen/text_size30" />
        </RelativeLayout>

        <View
            android:id="@+id/view2"
            style="@style/xian"
            android:layout_below="@+id/rl"
            android:layout_marginLeft="@dimen/margin_left24" />

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/view2">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_left24"
                    android:paddingLeft="3dp"
                    android:text="@string/yzm"
                    android:textColor="@color/text_hot_color"
                    android:textSize="@dimen/text_size30" />

                <EditText
                    android:id="@+id/et_Invitation_code"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="90dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="@string/qsryzm"
                    android:textColor="@color/text_hot_color"
                    android:textColorHint="@color/b_nine_color"
                    android:textSize="@dimen/text_size30" />
            </RelativeLayout>

            <Button
                android:id="@+id/btn_invitation_code"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/margin_right24"
                android:background="@drawable/rect_blue1"
                android:gravity="center"
                android:text="@string/hqyzm"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size30" />
        </LinearLayout>

        <View
            android:id="@+id/view3"
            style="@style/xian"
            android:layout_below="@+id/ll"
            android:layout_marginRight="@dimen/margin_right24"
            android:layout_marginLeft="@dimen/margin_left24" />

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/view3">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_left24"
                    android:paddingLeft="3dp"
                    android:text="@string/mm"
                    android:textColor="@color/text_hot_color"
                    android:textSize="@dimen/text_size30" />

                <EditText
                    android:id="@+id/et_modify_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="90dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:inputType="textPassword"
                    android:hint="@string/qszmm"
                    android:textColor="@color/text_hot_color"
                    android:textColorHint="@color/b_nine_color"
                    android:textSize="@dimen/text_size30" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/margin_right24">

                <ImageView
                    android:id="@+id/iv_clear"
                    android:layout_width="@dimen/text_size36"
                    android:layout_height="@dimen/text_size36"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:src="@mipmap/dl_xx" />

                <ImageView
                    android:id="@+id/iv_saw"
                    android:layout_width="@dimen/text_size36"
                    android:layout_height="@dimen/text_size36"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/iv_clear"
                    android:src="@mipmap/dl_eyeblue" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:id="@+id/view4"
            style="@style/xian"
            android:layout_below="@+id/ll1"
            android:layout_marginRight="@dimen/margin_right24"
            android:layout_marginLeft="@dimen/margin_left24" />

        <TextView
            android:id="@+id/tv_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view4"
            android:layout_marginLeft="@dimen/margin_left24"
            android:layout_marginTop="@dimen/margin_left12"
            android:text="@string/tip4"
            android:textColor="@color/eight_e_color"
            android:textSize="@dimen/text_size26" />

        <LinearLayout
            android:id="@+id/ll_xy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_tips"
            android:layout_marginLeft="@dimen/margin_left24"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/iv_choose"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="3dp"
                android:background="@mipmap/icon_duigouh"
                android:paddingLeft="3dp"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/tv_register_xieyi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/ydty"
                android:textColor="@color/text_one_color"
                android:textSize="@dimen/text_size24" />

            <TextView
                android:id="@+id/tv_xieyi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/xy"
                android:textColor="@color/blue"
                android:textSize="@dimen/text_size24"/>
        </LinearLayout>
        <Button
            android:id="@+id/btn_change_password"
            style="@style/mySureButton"
            android:layout_below="@+id/ll_xy"
            android:layout_marginTop="@dimen/margintop70"
            android:background="@drawable/rect_blue_normal"
            android:text="@string/qrxg"
            android:textColor="@color/two_eight_color"/>

    </RelativeLayout>
</RelativeLayout>