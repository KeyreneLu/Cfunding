<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_dynamics_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/image"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="2016"
            android:textColor="@color/a_e_color"
            android:textSize="@dimen/text_size34"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tv_dynamics_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/image"
            android:layout_below="@+id/tv_dynamics_year"
            android:gravity="center"
            android:text="11-22"
            android:textColor="@color/a_e_color"
            android:textSize="@dimen/text_size28"/>
    </LinearLayout>
    <!--线条部分-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <View
            android:id="@+id/line_normal1"
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="@color/xian"/>

        <ImageView
            android:id="@+id/image"
            android:layout_width="9dp"
            android:layout_height="9dp"
            android:src="@drawable/rect_circle"/>

        <View
            android:id="@+id/line_normal"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/image"
            android:background="@color/xian"/>
    </LinearLayout>
    <!--文字部分-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingRight="30dp">
        <TextView
            android:id="@+id/tv_dynamics_name"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignLeft="@+id/image"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="性感女神加盟"
            android:textColor="@color/MaxTitleTextColor"
            android:textSize="@dimen/text_size30"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_dynamics_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/image"
            android:layout_below="@+id/tv_dynamics_name"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="性感女神加盟性感女神加盟性感女神性感女神加盟性感女神加盟性感女神加盟性感女神加盟性感女神加盟性感女神加盟性感女神加盟性感女神加盟性感女神加盟加盟性感女神加盟性感女神加盟性感女神加盟性感女神加盟"
            android:textColor="@color/a_e_color"
            android:textSize="@dimen/text_size24"/>
    </LinearLayout>
</LinearLayout>