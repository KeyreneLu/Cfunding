<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">

    <include
        android:id="@+id/include"
        layout="@layout/head"/>
    <View
        android:id="@+id/tx_xian"
        android:layout_below="@+id/include"
        style="@style/xian"/>

    <LinearLayout
        android:layout_below="@id/tx_xian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="40dp">

        <RelativeLayout
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="57dp">

            <ImageView
                android:id="@+id/iv_time1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/w_zrjg"/>

            <View
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/iv_time1"
                android:layout_width="5dp"
                android:layout_height="32dp"
                android:background="@color/blue"/>

            <TextView
                android:id="@+id/tv_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_time1"
                android:text="成功转入2.00元"
                android:textSize="@dimen/text_size34"
                android:textColor="@color/text_hot_color"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/jt"
                android:layout_below="@+id/tv_balance"
                android:layout_toRightOf="@+id/iv_time1"
                android:layout_marginTop="5dp"
                android:textColor="@color/eight_e_color"
                android:layout_marginLeft="20dp"
                android:textSize="@dimen/text_size28"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="89dp">
            <View
                android:id="@+id/progress1"
                android:layout_marginLeft="10dp"
                android:layout_width="5dp"
                android:layout_height="32dp"
                android:background="@color/b_nine_color"/>

            <ImageView
                android:id="@+id/iv_time2"
                android:layout_below="@+id/progress1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/w_zrjs"/>

            <View
                android:id="@+id/progress2"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/iv_time2"
                android:layout_width="5dp"
                android:layout_height="32dp"
                android:background="@color/b_nine_color"/>

            <TextView
                android:id="@+id/tv_time2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_time2"
                android:layout_alignTop="@+id/iv_time2"
                android:layout_marginTop="-5dp"
                android:text="成功转入2.00元"
                android:textSize="@dimen/text_size34"
                android:textColor="@color/text_hot_color"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ksjssy"
                android:layout_below="@+id/tv_time2"
                android:layout_toRightOf="@+id/iv_time2"
                android:layout_marginTop="5dp"
                android:textColor="@color/eight_e_color"
                android:layout_marginLeft="20dp"
                android:textSize="@dimen/text_size28"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/progress3"
                android:layout_marginLeft="10dp"
                android:layout_width="5dp"
                android:layout_height="32dp"
                android:background="@color/b_nine_color"/>

            <ImageView
                android:id="@+id/iv_time3"
                android:layout_below="@+id/progress3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/w_zrcg"/>


            <TextView
                android:id="@+id/tv_time3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_time3"
                android:layout_alignTop="@+id/iv_time3"
                android:text="成功转入2.00元"
                android:layout_marginTop="-7dp"
                android:textSize="@dimen/text_size34"
                android:textColor="@color/text_hot_color"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sydz"
                android:layout_below="@+id/tv_time3"
                android:layout_toRightOf="@+id/iv_time3"
                android:layout_marginTop="5dp"
                android:textColor="@color/eight_e_color"
                android:layout_marginLeft="20dp"
                android:textSize="@dimen/text_size28"
                />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>