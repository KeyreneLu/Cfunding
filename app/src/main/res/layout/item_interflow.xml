<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <!--线条部分-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/image_reach"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/rect_circle"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/image_unreach"
            android:layout_width="9dp"
            android:layout_height="9dp"
            android:src="@drawable/rect_circle"/>

        <View
            android:id="@+id/line_normal"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/image"
            android:background="@color/xian"/>
    </LinearLayout>
    <!--文字部分-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="30dp"
        android:paddingBottom="30dp"
        >

        <TextView
            android:id="@+id/tv_interflow_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/image"
            android:layout_marginLeft="20dp"
            android:text="性感女神加盟dsadasdsadasdasdsadsadsadsadsadsadsadasdasdsa"
            android:textColor="@color/text_hot_color"
            android:textSize="@dimen/text_size26"/>

        <TextView
            android:id="@+id/tv_interflow_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/image"
            android:layout_below="@+id/tv_dynamics_name"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="2016"
            android:textColor="@color/text_hot_color"
            android:textSize="@dimen/text_size26"/>
    </LinearLayout>
</LinearLayout>