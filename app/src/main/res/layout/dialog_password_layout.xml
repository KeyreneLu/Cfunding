<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rect_white"
    >

    <RelativeLayout
        android:layout_width="310dp"
        android:layout_height="220dp"
        android:background="@drawable/rect_white">

        <TextView
            android:id="@+id/zf_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="@string/qsrzfmm"
            android:textColor="@color/text_hot_color"
            android:textSize="@dimen/text_size36"
            android:textStyle="bold"/>

        <View
            android:id="@+id/zf_xian"
            android:layout_width="match_parent"
            android:layout_height="@dimen/xian"
            android:layout_below="@id/zf_title"
            android:background="@color/blue"/>

        <LinearLayout
            android:id="@+id/ll_number"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/zf_xian"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/rect_gray8">

            <EditText
                android:id="@+id/et_mima"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="@color/text_hot_color"/>

            <ImageView
                android:id="@+id/iv_delete"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:src="@mipmap/dl_xx"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/ll_number"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:text="@string/wjmmw"
            android:textColor="@color/blue"
            android:textSize="@dimen/text_size24"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_forget"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="@dimen/margin_left24"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="125dp"
                android:layout_height="40dp"
                android:layout_marginLeft="13dp"
                android:background="@drawable/rect_blue2"
                android:text="@string/qxm"
                android:textColor="@color/blue"
                android:textSize="@dimen/text_size34"
                />

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="125dp"
                android:layout_height="40dp"
                android:layout_marginLeft="13dp"
                android:background="@drawable/rect_blue4"
                android:text="@string/fk"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size34"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>