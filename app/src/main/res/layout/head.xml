<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_tou"
        android:layout_width="match_parent"
        android:layout_height="21.5dp"
        android:visibility="gone">
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_head"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/custom_title_height"
        android:elevation="1dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_me_message"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_right24"
            android:src="@mipmap/w_xf"
            android:visibility="gone"/>

        <RelativeLayout
            android:id="@+id/rl_left_return"
            android:layout_width="80dp"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/left_return"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:visibility="gone"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/title"
            android:layout_marginLeft="160dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textColor="@color/text_hot_color"
            android:textSize="@dimen/text_size34"
            android:textStyle="bold"/>

        <RelativeLayout
            android:id="@+id/rl_notice"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:visibility="gone">
            <ImageView
                android:id="@+id/iv_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/icon_loveg"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_right"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/iv_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_left24"/>

            <TextView
                android:id="@+id/tv_right1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_right24"
                android:textColor="@color/titleTextColor"
                android:textSize="14sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_left"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_left12"
                android:textColor="@color/titleTextColor"
                android:textSize="@dimen/text_size36"/>

            <ImageView
                android:id="@+id/iv_home_left"
                android:layout_width="@dimen/size60"
                android:layout_height="@dimen/size60"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_right"
                android:src="@mipmap/icon_backgray"
                android:visibility="gone"
            />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>