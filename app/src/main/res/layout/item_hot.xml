<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="152dp"
    android:elevation="3dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/rect_gray"
        app:cardElevation="1dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_hot_picture"
                android:layout_width="155dp"
                android:layout_height="130dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_left12"
                android:scaleType="fitXY"
                android:src="@mipmap/timg"/>

            <TextView
                android:id="@+id/tv_hot_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="@dimen/margin_right12"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_toRightOf="@id/iv_hot_picture"
                android:text="@string/app_name"
                android:textColor="@color/text_hot_color"
                android:textSize="@dimen/text_size30"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_hot_percent"
                style="@style/hotTextview"
                android:layout_below="@+id/tv_hot_name"
                android:layout_marginTop="5dp"
                android:text="10%~80%"
                android:textColor="@color/hot_red"
                android:textSize="@dimen/text_size54"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_hot_tips"
                style="@style/hotTextview"
                android:layout_below="@id/tv_hot_percent"
                android:layout_marginTop="6dp"
                android:text="@string/wtxshbl"
                android:textColor="@color/eight_e_color"
                android:textSize="@dimen/text_size24"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_hot_picture"
                android:layout_below="@+id/tv_hot_tips"
                android:layout_toRightOf="@id/iv_hot_picture"
                android:gravity="bottom"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/tv"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@mipmap/sy_r"/>
                    <TextView
                        android:id="@+id/tv_hot_person"
                        style="@style/myHotBottomTextView"
                        android:layout_toRightOf="@+id/tv"
                        android:text="2655人"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/tv2"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@mipmap/sy_jb"/>
                    <TextView
                        android:id="@+id/tv_hot_money"
                        style="@style/myHotBottomTextView"
                        android:layout_toRightOf="@id/tv2"
                        android:text="100万元"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/tv3"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@mipmap/sy_sj"/>
                    <TextView
                        android:id="@+id/tv_hot_time"
                        style="@style/myHotBottomTextView"
                        android:layout_toRightOf="@+id/tv3"
                        android:text="23天"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <ImageView
        android:id="@+id/iv_hot_flag"
        android:layout_width="40dp"
        android:layout_height="22dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/margin_left16"
        android:layout_marginRight="-1dp"
        android:elevation="3dp"
        android:src="@mipmap/cp_kj"/>
</RelativeLayout>