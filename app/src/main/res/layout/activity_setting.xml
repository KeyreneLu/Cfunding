<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg">

    <include
        android:id="@+id/include"
        layout="@layout/head"/>

    <View
        android:id="@+id/xian"
        style="@style/xian"
        android:layout_below="@+id/include"
        android:elevation="1dp"/>

    <View
        android:id="@+id/xian1"
        style="@style/xian"
        android:layout_below="@id/xian"
        android:layout_marginTop="8dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/xian1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg">

            <RelativeLayout
                android:id="@+id/ll_account_info"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    style="@style/MyTextStyle"
                    android:text="@string/grzl"/>

                <View
                    style="@style/xian"
                    android:layout_alignParentBottom="true"/>

                <TextView
                    android:id="@+id/tv_setting_datum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_right24"
                    android:layout_toLeftOf="@id/iv"
                    android:textColor="@color/text_hot_color"
                    android:textSize="@dimen/text_size30"/>

                <ImageView
                    android:id="@+id/iv"
                    style="@style/MyImageViewStyle"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ll_renzhen"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_below="@+id/ll_account_info"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    style="@style/MyTextStyle"
                    android:text="@string/smrz"/>

                <View
                    style="@style/xian"
                    android:layout_alignParentBottom="true"
                    />

                <TextView
                    android:id="@+id/tv_renzhen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/iv_renzhen"
                    android:text="@string/wrz"
                    android:textColor="@color/text_hot_color"
                    android:textSize="@dimen/text_size30"/>

                <ImageView
                    android:id="@+id/iv_renzhen"
                    style="@style/MyImageViewStyle"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ll_account"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_below="@+id/ll_renzhen"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    style="@style/MyTextStyle"
                    android:text="@string/zhxx"/>

                <View
                    style="@style/xian"
                    android:layout_alignParentBottom="true"
                    />

                <ImageView
                    style="@style/MyImageViewStyle"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ll_address"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_below="@+id/ll_account"
                android:background="@color/white"
                android:elevation="1dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/MyTextStyle"
                    android:text="@string/shdz"/>

                <View
                    style="@style/xian"
                    android:layout_alignParentBottom="true"/>

                <ImageView
                    style="@style/MyImageViewStyle"/>
            </RelativeLayout>

            <View
                android:id="@+id/zx_xian2"
                style="@style/xian"
                android:layout_below="@+id/ll_address"
                />

            <View
                android:id="@+id/zx_xian3"
                style="@style/xian"
                android:layout_below="@+id/zx_xian2"
                android:layout_marginTop="8dp"
                />


            <RelativeLayout
                android:id="@+id/ll_xiugai"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_below="@+id/zx_xian3"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    style="@style/MyTextStyle"
                    android:text="@string/xgmm"/>

                <View
                    style="@style/xian"
                    android:layout_alignParentBottom="true"
                    />

                <ImageView
                    style="@style/MyImageViewStyle"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ll_shoushi"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_below="@+id/ll_xiugai"
                android:background="@color/white"
                android:elevation="1dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/MyTextStyle"
                    android:text="@string/ssmm"/>

                <ImageView
                    android:id="@+id/iv_shoushi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/wd_off"/>
            </RelativeLayout>

            <View
                android:id="@+id/zx_xian4"
                style="@style/xian"
                android:layout_below="@+id/ll_shoushi"
                />

            <View
                android:id="@+id/zx_xian5"
                style="@style/xian"
                android:layout_below="@+id/zx_xian4"
                android:layout_marginTop="8dp"/>

            <RelativeLayout
                android:id="@+id/ll_about"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_below="@+id/zx_xian5"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    style="@style/MyTextStyle"
                    android:text="@string/gywm"/>

                <View
                    style="@style/xian"
                    android:layout_alignParentBottom="true"
                    />

                <TextView
                    android:id="@+id/tv_about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/iv_about"
                    android:text="@string/bb"
                    android:textColor="@color/text_hot_color"
                    android:textSize="@dimen/text_size30"/>

                <ImageView
                    android:id="@+id/iv_about"
                    style="@style/MyImageViewStyle"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ll_problem"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_below="@+id/ll_about"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    style="@style/MyTextStyle"
                    android:text="@string/cjwt"/>

                <View
                    style="@style/xian"
                    android:layout_alignParentBottom="true"
                    />

                <ImageView
                    style="@style/MyImageViewStyle"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ll_phone"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_below="@+id/ll_problem"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    style="@style/MyTextStyle"
                    android:text="@string/kfdh"/>

                <View
                    style="@style/xian"
                    android:layout_alignParentBottom="true"
                    />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/iv_phone"
                    android:text="@string/phone"
                    android:textColor="@color/text_hot_color"
                    android:textSize="@dimen/text_size30"/>

                <ImageView
                    android:id="@+id/iv_phone"
                    style="@style/MyImageViewStyle"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ll_feedback"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_below="@+id/ll_phone"
                android:background="@color/white"
                android:elevation="1dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/MyTextStyle"
                    android:text="@string/yjfk"/>


                <ImageView
                    style="@style/MyImageViewStyle"/>
            </RelativeLayout>

            <View
                style="@style/xian"
                android:layout_below="@+id/ll_feedback"/>

            <TextView
                android:id="@+id/btn_exit_app"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_below="@+id/ll_feedback"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="9dp"
                android:background="@color/white"
                android:elevation="1dp"
                android:gravity="center"
                android:text="@string/tcdl"
                android:textColor="@color/text_hot_color"
                android:textSize="@dimen/text_size30"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>