<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginTop="5dp"
        android:id="@+id/rl_sum1"
        android:layout_width="match_parent"
        android:layout_height="17dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_sale_money"
            style="@style/commonWeightLayout"
            android:layout_weight="1.3"
            android:gravity="center"
            android:text="4000万以上（含4000万）"
            android:textColor="@color/text_hot_color"
            android:textSize="@dimen/text_size26"/>
        <RelativeLayout
            style="@style/commonWeightLayout"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_sale_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="20%"
                android:textColor="@color/hot_red"
                android:textSize="@dimen/text_size26"/>

            <ImageView
                android:id="@+id/iv_sale_state"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_toRightOf="@+id/tv_sale_percent"
                android:src="@mipmap/icon_tx"
                android:visibility="invisible"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>