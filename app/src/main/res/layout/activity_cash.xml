<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">
    <include
        android:id="@+id/include"
        layout="@layout/head"/>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:id="@+id/Rl_fifty_cash"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginLeft="@dimen/margin_left24"
        android:layout_marginRight="@dimen/margin_right24"
        android:background="@mipmap/hd_red"
        android:elevation="3dp">

        <TextView
            android:id="@+id/tv_fifty_cash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="@string/fifty"
            android:textColor="@color/text_hot_color"
            android:textSize="@dimen/text_size30"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/tv_fifty_cash"
            android:text="@string/djj"
            android:textColor="@color/text_hot_color"
            android:textSize="@dimen/text_size30"/>

        <TextView
            android:id="@+id/tv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_fifty_cash"
            android:layout_alignStart="@+id/tv_fifty_cash"
            android:textColor="@color/text_one_color"
            android:textSize="@dimen/text_size24"
            android:layout_below="@+id/tv_fifty_cash"
            android:layout_marginTop="8dp"
            android:text="@string/dhx"/>

        <TextView
            android:id="@+id/tv_fifty_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv5"
            android:textSize="@dimen/text_size24"
            android:layout_marginLeft="8dp"
            android:layout_toEndOf="@+id/tv5"
            android:layout_toRightOf="@+id/tv5"
            android:text="500"
            android:textColor="@color/blue"/>

        <TextView
            android:id="@+id/tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_one_color"
            android:textSize="@dimen/text_size24"
            android:layout_alignTop="@+id/tv_fifty_number"
            android:layout_marginLeft="3dp"
            android:layout_toEndOf="@+id/tv_fifty_number"
            android:layout_toRightOf="@+id/tv_fifty_number"
            android:text="@string/jf"/>

        <ImageView
            android:id="@+id/iv_fifty_choose"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="3dp"
            android:src="@mipmap/cp_st_dg"
            android:visibility="invisible"
            />

        <LinearLayout
            android:id="@+id/ll3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5.4">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:layout_toLeftOf="@+id/tv_fifty_deadline"
                    android:text="有效期"
                    android:textColor="@color/eight_e_color"
                    android:textSize="@dimen/text_size22"
                    />

                <TextView
                    android:id="@+id/tv_fifty_deadline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:text="永久"
                    android:textColor="@color/eight_e_color"
                    android:textSize="@dimen/text_size22"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2">
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Rl_twenty_cash"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginLeft="@dimen/margin_left24"
        android:layout_marginRight="@dimen/margin_right24"
        android:layout_marginTop="10dp"
        android:background="@mipmap/hd_orange"
        android:elevation="3dp">

        <TextView
            android:id="@+id/tv_twenty_cash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="@string/twenty"
            android:textColor="@color/text_hot_color"
            android:textSize="@dimen/text_size30"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/tv_twenty_cash"
            android:text="@string/djj"
            android:textColor="@color/text_hot_color"
            android:textSize="@dimen/text_size30"/>

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_twenty_cash"
            android:layout_alignStart="@+id/tv_twenty_cash"
            android:layout_below="@+id/tv_twenty_cash"
            android:layout_marginTop="8dp"
            android:text="@string/dhx"
            android:textColor="@color/text_one_color"
            android:textSize="@dimen/text_size24"/>

        <TextView
            android:id="@+id/tv_twenty_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv2"
            android:layout_marginLeft="8dp"
            android:layout_toEndOf="@+id/tv2"
            android:layout_toRightOf="@+id/tv2"
            android:text="200"
            android:textColor="@color/blue"
            android:textSize="@dimen/text_size24"/>

        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_twenty_number"
            android:layout_marginLeft="3dp"
            android:layout_toEndOf="@+id/tv_twenty_number"
            android:layout_toRightOf="@+id/tv_twenty_number"
            android:text="@string/jf"
            android:textColor="@color/text_one_color"
            android:textSize="@dimen/text_size24"/>

        <ImageView
            android:id="@+id/iv_twenty_choose"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="3dp"
            android:src="@mipmap/cp_st_dg"
            android:visibility="invisible"
            />

        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5.4">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:layout_toLeftOf="@+id/tv_twenty_deadline"
                    android:text="有效期"
                    android:textColor="@color/eight_e_color"
                    android:textSize="@dimen/text_size22"
                    />

                <TextView
                    android:id="@+id/tv_twenty_deadline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:text="永久"
                    android:textColor="@color/eight_e_color"
                    android:textSize="@dimen/text_size22"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2">
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Rl_ten_cash"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginLeft="@dimen/margin_left24"
        android:layout_marginRight="@dimen/margin_right24"
        android:layout_marginTop="10dp"
        android:background="@mipmap/hd_blue"
        android:elevation="3dp">

        <TextView
            android:id="@+id/tv_ten_cash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="@string/ten"
            android:textColor="@color/text_hot_color"
            android:textSize="@dimen/text_size30"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/tv_ten_cash"
            android:text="@string/djj"
            android:textColor="@color/text_hot_color"
            android:textSize="@dimen/text_size30"/>

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_ten_cash"
            android:layout_alignStart="@+id/tv_ten_cash"
            android:layout_below="@+id/tv_ten_cash"
            android:layout_marginTop="8dp"
            android:text="@string/dhx"
            android:textColor="@color/text_one_color"
            android:textSize="@dimen/text_size24"/>

        <TextView
            android:id="@+id/tv_ten_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv"
            android:layout_marginLeft="8dp"
            android:layout_toEndOf="@+id/tv"
            android:layout_toRightOf="@+id/tv"
            android:text="100"
            android:textColor="@color/blue"
            android:textSize="@dimen/text_size24"/>

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_ten_number"
            android:layout_marginLeft="3dp"
            android:layout_toEndOf="@+id/tv_ten_number"
            android:layout_toRightOf="@+id/tv_ten_number"
            android:text="@string/jf"
            android:textColor="@color/text_one_color"
            android:textSize="@dimen/text_size24"/>

        <ImageView
            android:id="@+id/iv_ten_choose"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="3dp"
            android:src="@mipmap/cp_st_dg"
            android:visibility="invisible"
            />

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5.4">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:layout_toLeftOf="@+id/tv_ten_deadline"
                    android:text="有效期"
                    android:textColor="@color/eight_e_color"
                    android:textSize="@dimen/text_size22"
                    />

                <TextView
                    android:id="@+id/tv_ten_deadline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:text="永久"
                    android:textColor="@color/eight_e_color"
                    android:textSize="@dimen/text_size22"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2">
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>