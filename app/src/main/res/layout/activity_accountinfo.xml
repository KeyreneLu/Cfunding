<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">

    <include
        android:id="@+id/include"
        layout="@layout/head"/>
    <View
        android:id="@+id/info_xian"
        style="@style/xian"
        android:layout_below="@+id/include"
        />

    <View
        android:id="@+id/info_xian1"
        android:layout_marginTop="8dp"
        style="@style/xian"
        android:layout_below="@+id/info_xian"
        />

    <RelativeLayout
        android:id="@+id/ll_info"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/info_xian1"
        android:background="@color/white"
        android:orientation="horizontal">
            <TextView
                style="@style/MyTextStyle"
                android:text="@string/dh"/>
            <ImageView
                android:id="@+id/iv_dh"
                style="@style/MyImageViewStyle"
                />

            <TextView
                android:id="@+id/tv_number"
                android:textSize="@dimen/text_size30"
                android:textColor="@color/text_hot_color"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/iv_dh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                style="@style/xian"
                android:layout_alignParentBottom="true"
                />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_name"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/ll_info"
        android:background="@color/white"
        android:orientation="horizontal">

            <TextView
                style="@style/MyTextStyle"
                android:text="@string/xm"/>
            <ImageView
                android:id="@+id/iv_name"
                style="@style/MyImageViewStyle"
                />

            <TextView
                android:id="@+id/tv_name"
                android:textSize="@dimen/text_size30"
                android:textColor="@color/text_hot_color"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/iv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                style="@style/xian"
                android:layout_alignParentBottom="true"
                />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_card"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/ll_name"
        android:background="@drawable/shadow"
        android:orientation="horizontal">

            <TextView
                style="@style/MyTextStyle"
                android:text="@string/kh"/>

            <TextView
                android:id="@+id/tv_card"
                android:textSize="@dimen/text_size30"
                android:textColor="@color/text_hot_color"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/iv_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/iv_card"
                style="@style/MyImageViewStyle"
                />
    </RelativeLayout>
    <View
        android:id="@+id/info_xian2"
        style="@style/xian"
        android:layout_below="@+id/ll_card"
        />

    <RelativeLayout
        android:layout_below="@+id/info_xian2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_tip"
            android:layout_marginTop="@dimen/margin_right24"
            android:layout_marginLeft="@dimen/margin_left24"
            android:src="@mipmap/icon_tx"
            android:layout_width="16dp"
            android:layout_height="16dp"/>

        <TextView
            android:text="@string/info_tip"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/margin_right24"
            android:lineSpacingExtra="5dp"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@id/iv_tip"
            android:textSize="@dimen/text_size24"
            android:textColor="@color/eight_e_color"
            android:layout_width="match_parent"
            android:layout_height="44dp"/>
    </RelativeLayout>

</RelativeLayout>