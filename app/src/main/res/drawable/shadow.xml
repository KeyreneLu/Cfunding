<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 点击之后 -->

    <item android:state_pressed="true">

        <layer-list>
            <item
                android:left="4dp"
                android:top="4dp">
                <shape>
                    <solid
                        android:color="#cdcde0"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <!-- 正常状态 -->
    <item>
        <layer-list>
            <!-- 第一层 -->
            <item
                android:top="4dp">
                <!--android:left="4dp"-->
                <shape>
                    <solid
                        android:color="#cdcde0"/>
                    <!--<corners-->
                        <!--android:radius="3dp"/>-->
                </shape>
            </item>
            <!-- 第二层 -->
            <item
                android:bottom="4dp"
                android:right="4dp">
                <shape>
                    <solid
                        android:color="#cdcde0"/>
                    <!--<corners-->
                        <!--android:radius="3dp"/>-->
                </shape>
            </item>
            <!-- 第三层 -->
            <item
                android:bottom="1dp"
                >
                <shape>
                    <solid
                        android:color="@color/white"/>
                    <!--<corners-->
                        <!--android:radius="3dp"/>-->
                </shape>
            </item>
        </layer-list>
    </item>
</selector>